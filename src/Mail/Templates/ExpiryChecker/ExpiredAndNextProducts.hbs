<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    #content {
        display: flex;
        flex-direction: column;

        align-items: center;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    #title {

    }

    #description {

    }

    table {
        margin-top: 2%;
        width: 75%;
    }

    #tableTitle {
        background-color: #4f4f4f;
        font-size: 16px;
        font-weight: bold;
        color: #fff
    }
</style>

<div id="content">
    <h2 id="title">Olá {{name}}</h2>
    <h4 id="description">Este é seu resumo semanal do {{AppName}}</h4>

    <table>
        <tr id="tableTitle">
            <th>Código</th>
            <th>Nome</th>
            <th>Lote</th>
            <th>Data de validade</th>
            <th>Quantidade</th>
        </tr>
        {{#each batch}}
        <tr>
            <td>{{this.code}}</td>
            <td>{{this.productName}}</td>
            <td>{{this.batch}}</td>
            <td>{{this.exp_date}}</td>
            <td>{{this.amount}}</td>
        </tr>
        {{/each}}
    </table>
</div>

